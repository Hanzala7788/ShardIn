[Unit]
Description=ShardIn Django Application
After=network.target postgresql.service

[Service]
Type=notify
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/ShardIn
Environment="PATH=/home/ubuntu/ShardIn/venv/bin"
ExecStart=/home/ubuntu/ShardIn/venv/bin/gunicorn config.wsgi:application --bind 0.0.0.0:8000 --workers 3
ExecReload=/bin/kill -s HUP $MAINPID
KillMode=mixed
TimeoutStopSec=5
PrivateTmp=true
Restart=on-failure

[Install]
WantedBy=multi-user.target
